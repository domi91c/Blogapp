<%=form_for @post do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br/>
    <%= f.trix_editor :content%>
  </p>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <p>
    <%= f.submit "Beitrag speichern" %>
  </p>
<% end %>